    <div class="col-xs-10 col-sm-10 col-md-8 col-lg-6">

        <div class="controlesLogin">

            <section id="loginForm">
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <img class="img img-responsive" src="~/Content/logoUcre.jpg" style="max-width: 210px; margin: 0 auto">
                    <br />
                    <p style="display: block;" class="alineacionElementLogin">
                        @Html.LabelFor(m => m.UserName, new { style = "color:rgb(52, 113, 76);font-weight: normal;" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Ingrese su usuario" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger", style = "margin: 1px !important;" })
                    </p>

                    <p style="display: block;" class="alineacionElementLogin">
                        @Html.LabelFor(m => m.Password, new { style = "color:rgb(52, 113, 76);font-weight: normal;" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingrese su contraseña" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", style = "margin: 1px !important;" })
                    </p>

                    <p class="alineacionElementLogin">
                        @Html.ActionLink("¿Olvidaste tu Contraseña?", "RecuperaPassword", "Account")
                    </p>

                    <div class="text-center">
                        <input type="submit" value="Iniciar sesión" class="btn btn-success btn-sm center-block" />
                    </div>
